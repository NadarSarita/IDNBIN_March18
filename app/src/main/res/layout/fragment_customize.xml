<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customize.CustomizeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/IvMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="IDN Options"
            android:gravity="center_vertical"
            android:textColor="@color/color_tab_highlight"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/TvPortfolio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Portfolio"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_eye"/>

        <TextView
            android:id="@+id/TvMarketAnalysis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Market Analysis"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_eye"/>

        <TextView
            android:id="@+id/TvMovesAlerts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Price Movements"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_eye"/>

        <TextView
            android:id="@+id/TvTutorials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Video Tutorial"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_eye"/>

        <TextView
            android:id="@+id/TvChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Chats"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_eye"/>

        <TextView
            android:id="@+id/TvCustomize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </LinearLayout>

</RelativeLayout>