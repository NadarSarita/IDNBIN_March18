<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assets.SymbolListActivity">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="2dp"
        android:background="@color/colorWhiteTrans"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Back"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_option"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Digital"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_forex"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Forex"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_stocks"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Stocks"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_etf"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="ETF"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_commod"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Commod."
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_asset_crypto"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="Crypto"
            android:textColor="@color/colorLightGray"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linearlayout1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/Tv_Asset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="ASSET"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tv_Hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="HOUR"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tv_Profit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="PROFIT"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/colorLightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/Tv_Volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="VOLUME"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tv_Today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="TODAY"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tv_Spread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="SPREAD"
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Tv_Leverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="LEVER."
                android:textColor="@color/colorLightGray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="@color/colorLightGray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/Et_Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@null"
                android:hint="Search"
                android:textColor="@color/colorLightGray"
                android:textColorHint="@color/colorLightGray"
                android:textCursorDrawable="@color/colorWhite" />

            <TextView
                android:id="@+id/Tv_Close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:drawableRight="@drawable/ic_close"
                android:gravity="center"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

    <!--<androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rv_Digital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linearlayout1"
        android:layout_below="@+id/linearlayout2"
        android:visibility="visible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Rv_Forex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linearlayout1"
        android:layout_below="@+id/linearlayout2"
        android:visibility="gone"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout2"
        android:layout_toRightOf="@+id/linearlayout1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/Iv_Symbol"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_english_chat" />

            <TextView
                android:id="@+id/Tv_Symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/Iv_Symbol"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="AUD/CAD"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tv_Symbol"
                android:layout_toEndOf="@+id/Iv_Symbol"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="106.3547"
                android:textColor="@color/colorLightGray"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="-0.03%"
            android:textAlignment="center"
            android:textColor="@color/colorSell"
            android:textSize="10sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="2.6"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="x300"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_bell" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_info" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_star" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>