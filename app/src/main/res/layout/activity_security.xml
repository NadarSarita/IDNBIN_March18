<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.Settings.Security.SecurityActivity">

    <TextView
        android:id="@+id/TvAuthentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2-Step Authentication"
        android:padding="14dp"
        android:background="#1DFFFFFF"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_security"
        android:drawablePadding="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/TvPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_fingerprint"
        android:drawablePadding="16dp"
        android:text="Passcode"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:background="#1DFFFFFF"
        android:textColor="@color/colorWhite"
        android:padding="14dp"
        android:layout_below="@+id/TvAuthentication"/>

    <TextView
        android:id="@+id/TvActivesessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active sessions"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:background="#1DFFFFFF"
        android:drawableStart="@drawable/ic_time"
        android:drawablePadding="16dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/TvPasscode"/>

    <TextView
        android:id="@+id/TvChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:padding="14dp"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:background="#1DFFFFFF"
        android:layout_below="@+id/TvActivesessions"/>


</RelativeLayout>